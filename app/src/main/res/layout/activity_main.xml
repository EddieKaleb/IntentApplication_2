<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.ifpb.intentapplication_2.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Configuração do sistema"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:onClick="abrirConfig" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="google maps"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:onClick="abrirMaps" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtMus"
            android:layout_gravity="center_horizontal"
            android:hint="Nome da música" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="tocar Música"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:onClick="abrirMusica" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtNome"
            android:layout_gravity="center_horizontal"
            android:hint="Nome " />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtSMS"
            android:layout_gravity="center_horizontal"
            android:hint="Mensagem" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:onClick="abrirSMS" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/txtHora"
            android:hint="Horas" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/txtMin"
            android:hint="Minutos" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="novo alarme"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:onClick="criarAlarme" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtBusca"
            android:hint="Texto para buscar" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Busca direta"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:onClick="buscaDireta" />

    </LinearLayout>
</RelativeLayout>
